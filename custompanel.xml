<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
         <vbox>
         <relief>RIDGE</relief>         
         <bd>6</bd>
                <label>
                        <text>"Spindle Speed:"</text>
                        <font>("Helvetica",20)</font>
                </label>
                <bar>
                        <halpin>"spindle-speed"</halpin>
                        <max_>3000</max_>
                </bar>
        </vbox>
    <hbox>
	<relief>RIDGE</relief>
        <bd>2</bd>
        <label>
    	    <text>"Probe"</text>
            <font>("Helvetica",14)</font>
        </label>
        <led>
            <halpin>"led-probe"</halpin>
            <size>25</size>
            <on_color>"green"</on_color>
            <off_color>"red"</off_color>
	</led>
     </hbox>
  <vbox>
    <label><text>"Z touch off"</text></label>
    <hbox>
      <number>
        <halpin>"z-touch-off"</halpin>
        <format>"+004.4f"</format>
        <font>('courier 10 pitch',20)</font>
      </number>
    </hbox>
  </vbox>
</pyvcp>
